@model IQueryable<Category>

<div class="container text-center mt-4 mb-4">
    <div class="section-title">
        <h3>Категории товаров</h3>
        <a class="btn btn-primary mt-2" asp-controller="Categories" asp-action="Edit">Добавить</a>
    </div>
</div>
<div class="mb-5">
    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (Category category in Model)
            {
                <a class="list-group-item list-group-item-action" asp-controller="Categories" asp-action="Index" asp-route-id="@category.Id">@category.Name</a>
            }
        </div>
    }
</div>