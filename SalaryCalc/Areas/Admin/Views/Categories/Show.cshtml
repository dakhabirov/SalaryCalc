@model Category

<div>
    <h2>@Model.Name</h2>
    <ul>
        <li>
            <label asp-for="@Model.IsFavorite"></label>
            <output>: @Model.IsFavorite</output>
        </li>
    </ul>

    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
    <form style="display: inline-block" asp-controller="Categories" asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="button-delete" type="submit">Удалить</button>
    </form>
</div>