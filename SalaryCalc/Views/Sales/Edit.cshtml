@model Sale

<div>
    <div>
        <form asp-controller="Sales" asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserId" />
            <div>
                <label asp-for="DateAdded"></label><br />
                <input type="datetime" asp-for="DateAdded" />
                <span asp-validation-for="DateAdded"></span>
            </div>
            <label>Проданные товары</label><br />
            @Html.ListBox("productIds", ViewBag.Products as MultiSelectList)
            <button class="button-save" type="submit">Сохранить</button>
        </form>
    </div>
</div>