@model User
@{ string strTitle = "Редактировать запись";
                ViewBag.Title = strTitle; }

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="admin" asp-controller="Users" asp-action="Edit" method="post">

            <div>
                <label asp-for="UserName">Имя пользователя (логин)</label><br />
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="Fullname"></label><br />
                <input asp-for="Fullname" />
                <span asp-validation-for="Fullname"></span>
            </div>
            <div>
                <label asp-for="Position.Name"></label><br />
                @Html.DropDownList("positionId", ViewBag.Positions as SelectList)
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>