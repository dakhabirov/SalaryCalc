@model Product

<div>
    <div class="img-block">
        <img src="~/img/products/@Model.ImagePath" />
    </div>
    <h2>@Model.Name</h2>
    <p>@Model.Price</p>
    <p>@Model.Category</p>
    <p>@Model.IsFavorite</p>

    <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
    <form style="display: inline-block" id="form-@Model.Id" asp-controller="Products" asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <a href="#" onclick="document.getElementById('form-@Model.Id').submit();">Удалить</a>
    </form>
</div>