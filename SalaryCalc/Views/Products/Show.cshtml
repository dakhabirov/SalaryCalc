@model Product

<div>
    <div>
        <img src="~/img/products/@Model.ImagePath" />
    </div>
    <h2>@Model.Name</h2>
    <ul>
        <li>
            <label asp-for="@Model.Price"></label>
            <output>: @Model.Price</output>
        </li>
        <li>
            <label asp-for="@Model.Category"></label>
            <output>: @Model.Category.Name</output>
        </li>
    </ul>

    <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
    <form style="display: inline-block" asp-controller="Products" asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit">Удалить</button>
    </form>
</div>