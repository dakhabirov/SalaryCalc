@model Product

<div class="mt-4 mb-5">
    <div>
        <img alt="Изображение товара @Model.Name" class="img-product, passe-partout" src="~/img/products/@Model.ImagePath" />
        <h2>@Model.Name</h2>
        <label asp-for="@Model.Price"></label>
        <output>: @Model.Price рублей</output><br />
        <label asp-for="@Model.Category"></label>
        <output>: @Model.Category.Name</output><br />
    </div>
    <div class="mt-3">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
        <form style="display: inline-block" asp-controller="Products" asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button class="btn btn-primary" type="submit">Удалить</button>
        </form>
    </div>
</div>