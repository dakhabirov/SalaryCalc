@model Sale

<div>
    <h2>Редактировать запись</h2>
    <div>
        <form asp-controller="Sales" asp-action="Edit" method="post">
            <div>
                <label asp-for="SaleDate"></label>
                <input type="datetime" asp-for="SaleDate" />
                <span asp-validation-for="SaleDate"></span>
            </div>
            <div>
                <label asp-for="SaleProducts"></label>
                <input asp-for="SaleProducts" />
                <span asp-validation-for="SaleProducts"></span>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>