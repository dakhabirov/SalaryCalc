@model RegisterViewModel

<h2>Регистрация нового пользователя</h2>
<form asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewBag.returnUrl" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Fullname"></label><br />
        <input asp-for="Fullname" />
        <span asp-validation-for="Fullname"></span>
    </div>
    <div>
        @Html.LabelFor(m => m.Position.Name)<br />
        @Html.DropDownListFor(m => m.PositionId, ViewBag.Positions as SelectList)
        @Html.ValidationMessageFor(m => m.Position)
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <button class="btn btn-success mt-3" type="submit">Зарегистрироваться</button>
</form>