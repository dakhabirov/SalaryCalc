@model Product
@{ string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle; }

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-controller="Products" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div>
                <label asp-for="Name"></label><br />
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Category"></label><br />
                <input asp-for="Category" />
                <span asp-validation-for="Category"></span>
            </div>
            <div>
                <label asp-for="Price"></label><br />
                <input asp-for="Price" />
                <span asp-validation-for="Price"></span>
            </div>
            <div>
                <label asp-for="IsFavorite"> </label>
                <input asp-for="IsFavorite" />
                <span asp-validation-for="IsFavorite"></span>
            </div>
            <div>
                <label asp-for="ImagePath"></label><br />
                <input type="file" name="imageFile" id="imageFile" />
                <div>
                    <img class="img-block" src="~/img/products/@Model.ImagePath" />
                </div>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>