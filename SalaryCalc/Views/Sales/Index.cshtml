@model IQueryable<Sale>

<h3>Продажи</h3>
<div class="row">
    <div class="col-2">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Edit" asp-route-id="">Добавить</a>
    </div>
    <div class="col-9">
        @if (Model.Any())
        {
            <div class="list-group">
                @foreach (Sale sale in Model)
                {
                    <a class="list-group-item list-group-item-action" asp-controller="Sales" asp-action="Index" asp-route-id="@sale.Id">@sale.DateAdded — @sale.User.Fullname</a>
                }
            </div>
        }
    </div>
</div>