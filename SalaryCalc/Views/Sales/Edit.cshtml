@model Sale

<div class="mt-3 mb-5">
    <h2>Запись</h2>
    <form asp-controller="Sales" asp-action="Edit" method="post">
        <input type="hidden" asp-for="UserId" />
        <div>
            <label asp-for="DateAdded"></label><br />
            <input type="datetime" asp-for="DateAdded" />
            <span asp-validation-for="DateAdded"></span>
        </div>
        <label>Проданные товары</label><br />
        @Html.ListBox("productIds", ViewBag.Products as MultiSelectList)<br />
        <input class="btn btn-primary mt-3" type="submit" value="Сохранить" />
    </form>
</div>